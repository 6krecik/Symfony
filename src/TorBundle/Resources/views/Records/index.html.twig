{% extends 'TorBundle:layouts:layout.html.twig' %}

{% block body -%}
    <h1>Records list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Czas</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('records_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.imie }}</td>
                <td>{{ entity.nazwisko }}</td>
                <td>{{ entity.czas | date('h:i') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('records_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('records_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('records_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
