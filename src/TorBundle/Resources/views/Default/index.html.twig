{% extends 'TorBundle::layout.html.twig' %}

{% block body %}
<table>
    <tr><th>Id</th><th>Nazwa</th><th>User</th><th>Admin</th><th>Zablokuj</th></tr>

    {% for products in product %}
        <tr>
            <td>{{ products.id }}</td>
            <td>{{ products.username }}</td>

            {% set ROLE_USER = 'nadaj' %}
            {% set ROLE_ADMIN = 'nadaj' %}

            {% for role in products.roles %}

                {% if role == 'ROLE_USER' %}
                    {% set ROLE_USER = 'odbierz' %}

                {% endif %}

                {% if role == 'ROLE_ADMIN' %}
                    {% set ROLE_ADMIN = 'odbierz' %}


                {% endif %}
            {% endfor %}
            <td><a href="{{ path('tor_zmien', { 'id': products.id, 'action': ROLE_USER, 'role': 'ROLE_USER'}) }}">{{ ROLE_USER }}</a></td>
            <td><a href="{{ path('tor_zmien', { 'id': products.id, 'action': ROLE_ADMIN, 'role': 'ROLE_ADMIN'}) }}">{{ ROLE_ADMIN }}</a></td>
            {% if products.enabled %}
                <td><a href="{{ path('tor_zablokuj', { 'id': products.id, 'action': 1 }) }}">zablokuj</a></td>
            {% else %}
                <td><a href="{{ path('tor_zablokuj', { 'id': products.id, 'action': 0 }) }}">odblokuj</a></td>
            {% endif %}
    {% endfor %}
    </tr>
</table>

{% endblock %}